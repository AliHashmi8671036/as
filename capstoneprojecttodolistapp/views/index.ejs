<%- include("header.ejs") %>
    <div class="box" id="heading">
        <h1>
            <%= datetoDisplayed %>
          </h1>
    </div>    
    <div class="box">
        <% if(locals.todolists) { %>
            <ul class="list-group">
                <% for(let i=0; i<todolists.length; i++) { %>
                    <li class="item">
                        <div class="item">
                            <input type="checkbox">
                            <p>
                                <input type="checkbox">
                                <%= todolists[i] %>
                            </p>
                        </div>
                    </li>
                <% } %>
            </ul>
        <% } %> 
        
        
        <form method="POST" action="/">
            <input type="text" name="taskName" placeholder="New Item" autocomplete="off">
            <button type="submit" name="taskName">+</button>
        </form>
    </div>

